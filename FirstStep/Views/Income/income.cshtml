<head>
  <link rel="stylesheet" href="~/css/layout/add.css" />
</head>

@await Html.PartialAsync("_Navbar")

<div class="add">
  <h1 class="text-center">Income</h1>

  @model Income
  <form asp-action="Create" asp-controller="Income" method="post">
    <div class="income-container">
      <div class="nam-cat">
        <!--*--------NAME---------->
        <section class="name">
          <label asp-for="IncomeName">Name:</label>
          <input asp-for="IncomeName" type="text" />
          <span asp-validation-for="IncomeName"></span>
        </section>

        <!--*--------CATEGORY---------->
        <div>
          <section class="category">
            <label asp-for="Category">Category:</label>
            <select asp-for="Category">
              <option value="">Choose</option>
              <option value="Work">Work</option>
              <option value="Business">Business</option>
              <option value="Tips">Tips</option>
              <option value="Bonus">Bonus</option>
              <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Category"></span>
          </section>
        </div>

        <!--*--------TOTAL---------->
        <div class="total">
          <h3>Total Income:</h3>
          <p>$</p>
        </div>
      </div>

      <!--*----------DESCRIPTION------------>
      <div class="desc">
        <section class="text-box">
          <label asp-for="Description">Description:</label>
          <textarea asp-for="Description" cols="35" rows="7"></textarea>
          <span asp-validation-for="Description"></span>
        </section>
      </div>

      <div class="amt-date">
        <!--*--------AMOUNT---------->
        <section class="amount">
          <label asp-for="Amount">Amount:</label>
          <input asp-for="Amount" type="text" />
          <span asp-validation-for="Amount"></span>
        </section>

        <!--*----------DATE------------>
        <section class="date">
          <label asp-for="date_time">Date:</label>
          <input asp-for="date_time" type="date" />
          <span asp-validation-for="date_time"></span>
        </section>

        <!--* BUTTONS -->
        <button>Submit</button>

      </div>
  </form>
</div>