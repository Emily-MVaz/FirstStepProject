@{
ViewData["Title"] = "Home Page";
}

<head>
    <!-- <link rel="stylesheet" href="~/css/login/style.css"> -->
    <link rel="stylesheet" href="~/css/login/style1.css">
    <link rel="stylesheet" href="">
</head>
<div class="container" id="container">

    @model User

    <!--+---------------------------REGISTER----------------------------->
    <div class="form-container sign-in-container">
        <form asp-action="Register" asp-controller="User" method="post">
            <h1>Register</h1>
            <!--*----------------------FIRST NAME------------------------>
            <input type="text" placeholder="First Name" asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>

            <!--*----------------------LAST NAME------------------------>
            <input type="text" placeholder="Last Name" asp-for="LastName" />
            <span asp-validation-for="LastName"></span>

            <!--*----------------------EMAIL------------------------>
            <input type="email" placeholder="Email" asp-for="Email" />
            <span asp-validation-for="Email"></span>

            <!--*----------------------PASSWORD------------------------>
            <input type="password" placeholder="Password" asp-for="Password" />
            <span asp-validation-for="Password"></span>

            <!--*----------------------CONFIRM------------------------>
            <input type="password" placeholder="Confirm Password" asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm"></span>
            <!--*----------------------BUTTON------------------------->
            <button type="submit" id="signup-click">Sign Up</button>
        </form>

    </div>

</div>

<div class="container" id="login-container">
    <!--+---------------------------LOGIN----------------------------->
    @await Html.PartialAsync("login")
</div>



